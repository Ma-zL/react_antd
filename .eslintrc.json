{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true,
    "amd": true
  },
  "extends": ["plugin:react/recommended", "standard"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "quotes": ["error", "double"],
    "space-before-function-paren": 0,
    "eol-last": 0,
    "no-extra-semi": 1,
    "semi": ["error", "always"],
    "eqeqeq": 0,
    "one-var": 0,
    "no-undef": 1,
    "no-extra-boolean-cast": 1,
    "no-extra-parens": 1,
    "no-empty": 1,
    "no-use-before-define": [1, "nofunc"],
    "complexity": [1, 10],
    "no-unused-vars": 1,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,

    "comma-dangle": [2, "never"],
    "no-debugger": 2,
    "no-constant-condition": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty-character-class": 2,
    "no-invalid-regexp": 2,
    "no-func-assign": 2,
    "valid-typeof": 2,
    "no-unreachable": 2,
    "no-unexpected-multiline": 2,
    "no-sparse-arrays": 2,
    "no-shadow-restricted-names": 2,
    "no-cond-assign": 1,
    "no-native-reassign": 1, // 不能重写native对象

    "no-else-return": 0,
    "no-multi-spaces": 0,
    "key-spacing": [
      1,
      {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "block-scoped-var": 0,
    "consistent-return": 2,
    "accessor-pairs": 2,
    "dot-location": [2, "property"],
    "no-lone-blocks": 2,
    "no-labels": 2,
    "no-floating-decimal": 2,
    "no-loop-func": 2,
    "no-self-compare": 0,
    "no-sequences": 2,
    "no-throw-literal": 0,
    "no-return-assign": [0, "always"],
    "no-redeclare": [
      1,
      {
        "builtinGlobals": true
      }
    ],
    "no-unused-expressions": [
      1,
      {
        "allowShortCircuit": true,
        "allowTernary": true
      }
    ],
    "no-useless-call": 1,
    "no-useless-concat": 2,
    "no-void": 0,
    "no-with": 1,
    "space-infix-ops": 2,
    "valid-jsdoc": [
      2,
      {
        "requireParamDescription": true,
        "requireReturnDescription": true
      }
    ],
    "no-warning-comments": [
      2,
      {
        "terms": ["todo", "fixme", "any other term"],
        "location": "anywhere"
      }
    ],
    "curly": 1
  }
}
